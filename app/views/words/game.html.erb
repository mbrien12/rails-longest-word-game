<h1>Play the awesome words game!</h1>

<h2>Here is your grid....</h2>
<h3><%= @grid %></h3>

<p>What is your longest word?</p>
<form action="/score">
  <input type="text" id="answer" name="attempt" placeholder="Enter word">
  <input type="Submit" value="Submit word!">
  <input type="hidden" name="start_time" value="<%=Time.now %>">
  <input type="hidden" name="grid" value="<%= @grid %>">
</form>
